<div class="container text-center">
    <h1 class="my-5 display-4">Sign In</h1>

    <%= form_with(model: @user, url: sessions_path, local: true) do |f| %>
        <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, placeholder: "Enter your email", required: true %>
        </div>
        <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "Enter your pass", required: true %>
        </div>
        <div class = 'actions'>
            <%= f.submit 'Sign In' %>
        </div>
    <% end %>
    <%= link_to 'Back', root_path %>
</div>


